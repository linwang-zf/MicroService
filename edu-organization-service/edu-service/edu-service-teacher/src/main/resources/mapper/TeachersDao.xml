    <select id="queryAll" resultMap="TeachersMap">
        select
        <include refid="Base_Column"></include>
        from teachers
    </select>
    <select id="queryTeachers" resultMap="TeacherInfo">
        select t.*, a.userid, a.idcard, a.idcard_photo, a.name, a.province, a.city, a.district, a.qq, a.weixin, u.*,
        o.name as org_name,o.contact_name,o.contact_phone,o.province,o.city,o.district,o.address FROM teachers t
        LEFT JOIN organizations o ON o.org_id=t.organization_id
        LEFT JOIN users u ON t.userid = u.userid
        LEFT JOIN authenticated_users a ON t.userid = a.userid
        where 1=1
        <if test="query != null and query != ''">
            and (a.name like "%"#{query}"%"
            or u.userid like "%"#{query}"%"
            or t.grad_school like "%"#{query}"%"
            or o.name like "%"#{query}"%")
        </if>
        <if test="education != null and education != ''">
            and t.education=#{education}
        </if>
        <if test="degree != null and degree != ''">
            and t.degree=#{degree}
        </if>
        <if test="pageNum != null and pageNum != 0 and pageSize != null and pageSize != 0">
            order by t.userid limit ${pageSize * (pageNum-1)},#{pageSize}
        </if>
    </select>

    <select id="queryTeacherBriefVO" resultType="com.oes.model.vo.TeacherBriefVO">
        SELECT t.userid,name,adver_photo as adverPhoto,brief_intro as briefIntro
        FROM teachers t
        LEFT JOIN authenticated_users a
        ON a.userid = t.userid
        WHERE t.userid in
        <foreach item="id" collection="list" separator="," open="(" close=")" index="">
            #{id, jdbcType=NUMERIC}
        </foreach>
    </select>
